# ============================================================================
# Docker Compose Production Environment Configuration
# ============================================================================
# This file contains production-ready defaults
# DO NOT commit secrets to version control
# Usage: docker-compose --env-file .env.docker.prod up

# ============================================================================
# Node.js Application Configuration
# ============================================================================
NODE_ENV=production
PORT=3001

# ============================================================================
# JWT Configuration - MUST BE CHANGED IN PRODUCTION
# ============================================================================
# Generate strong secrets using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Store these securely - do not commit to git!
ACCESS_TOKEN_SECRET=CHANGE_ME_IN_PRODUCTION_ACCESS_TOKEN_SECRET_MIN_32_CHARS
REFRESH_TOKEN_SECRET=CHANGE_ME_IN_PRODUCTION_REFRESH_TOKEN_SECRET_MIN_32_CHARS
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ============================================================================
# PostgreSQL Configuration - MUST BE CHANGED IN PRODUCTION
# ============================================================================
# Use strong passwords: minimum 16 characters, mix of uppercase, lowercase, numbers, symbols
POSTGRES_DB=todo_db_prod
POSTGRES_USER=admin_prod
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION_SECURE_PASSWORD_MIN_16_CHARS
POSTGRES_PORT=5432

# ============================================================================
# Docker Compose Configuration
# ============================================================================
COMPOSE_PROJECT_NAME=todo_app_prod

# ============================================================================
# Logging Configuration (Optional)
# ============================================================================
# Adjust log level as needed: error, warn, info, debug
LOG_LEVEL=warn
