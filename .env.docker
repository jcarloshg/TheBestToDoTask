# ============================================================================
# Docker Compose Environment Configuration
# ============================================================================
# Copy this file to .env.docker and customize as needed
# Usage: docker-compose --env-file .env.docker up

# ============================================================================
# Node.js Application Configuration
# ============================================================================
NODE_ENV=production
PORT=3001

# ============================================================================
# JWT Configuration
# ============================================================================
# Generate strong secrets in production:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ACCESS_TOKEN_SECRET=dev-access-secret-key-change-in-production
REFRESH_TOKEN_SECRET=dev-refresh-secret-key-change-in-production
ACCESS_TOKEN_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_DB=todo_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123456
POSTGRES_PORT=5432

# ============================================================================
# Docker Compose Configuration
# ============================================================================
COMPOSE_PROJECT_NAME=todo_app
