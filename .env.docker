# ============================================================================
# Docker Development Environment Configuration
# ============================================================================
# Usage: docker-compose -f docker-compose.dev.yml up
# Copy to .env: cp .env.docker .env

# Node.js Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration
# In development (NODE_ENV=development): allows all origins
# In production: use comma-separated list of allowed origins
ALLOWED_ORIGINS=

# Debug & Logging
DEBUG=app:*
LOG_LEVEL=debug

# JWT Configuration (Development - Simple Keys)
ACCESS_TOKEN_SECRET=dev-access-secret-key-change-in-production-12345678
REFRESH_TOKEN_SECRET=dev-refresh-secret-key-change-in-production-12345678
ACCESS_TOKEN_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# PostgreSQL Configuration
POSTGRES_DB=todo_db_dev
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123456
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# Development Tools
# Enable verbose logging
VERBOSE_LOGGING=true

# Optional: Set to false to disable specific features during testing
# TEST_MODE=false
